<!--pages/addBook/addBook.wxml-->
<view class="page">
	<view>要新增一个账户</view>
	<view>
		<input class="weui-input" maxlength="20" placeholder="请输入账户名称" bindinput="onNameChange" />
	</view>
	<view>
		<input class="weui-input" type="number" placeholder="总资产" bindinput="onAmountChange" />
	</view>
	<picker mode="date" bindchange="onDateChange">
		<view class="picker">
			当前选择: {{date || currDate}}
		</view>
	</picker>

	<text>这里填写投资日志</text>
	<view>账户设置</view>

  <view>
    <button type="primary" bindtap="onAddBook">确定</button>
  </view>
</view>