<!--pages/addBook/addBook.wxml-->
<view class="page">
	<view>
		<view>记总资产</view>
		<view>你可以输入任意一天的资产</view>
	</view>
	<view class="row-container input-label-container">
		<text>账户名称</text>
		<input class="weui-input" maxlength="20" placeholder="点击输入" bindinput="onNameChange" placeholder-class="input-holder"/>
	</view>
	<view class="row-container input-label-container">
		<text>总资产</text>
		<input class="weui-input" type="digit" placeholder="点击输入" bindinput="onAmountChange" placeholder-class="input-holder"/>
	</view>
	<view class="row-container input-label-container">
		<text>日期</text>
		<picker mode="date" bindchange="onDateChange">
			<view class="picker input-label-container">
				{{initDate}}
			</view>
		</picker>
	</view>

	<view>
		<text>这里填写投资日志</text>
		<editor bindinput="onDesChange" placeholder="独来独往，亦心往自由，始于斯，待回首"></editor>
	</view>

	<view>账户设置（待开发）</view>

	<view>
		<button type="primary" bindtap="onAddBook">确定</button>
	</view>
</view>